<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="340dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_cv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_destination_corners"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/home_destination_image"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/attraction_fav_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@drawable/profile_share_background"
            android:padding="5dp"
            android:src="@drawable/ic_favorite_border_black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:background="#40000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_place_name"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/gothic_bold"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/home_place_address"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/gothic"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/home_place_status"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/gothic"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/home_place_photo_reference"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/gothic"
                        android:textColor="#FFFFFF"
                        android:textSize="0dp"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:id="@+id/home_place_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="1dp"
                        android:layout_weight="4"
                        android:drawableBottom="@drawable/ic_star_item_list"
                        android:drawablePadding="1dp"
                        android:fontFamily="@font/gothic_bold"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>